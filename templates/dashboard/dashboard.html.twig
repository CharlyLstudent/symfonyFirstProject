{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div>
        <div class="text-white flex justify-center">
            <h1>Bienvenue sur votre Dashboard</h1>
        </div>
        <div class="text-white flex justify-center">
            <p>Vous pouvez modifier vos informations personnelles ici</p>
        </div>
    </div>
    <div class="p-5 flex justify-center">
        <img src="{{ asset('images/quacknet-logo.png') }}" alt="Ma super image" class="rounded-full w-40 h-40">
    </div>
    <div class="p-5 flex justify-center flex-col text-center">
        <a href="{{ path('dashboard_edit') }}" class="text-sky-400 font-bold">Editer mon profil</a>
    </div>
    <div class="flex justify-center flex-col text-center">
        <a href="{{ path('app_quack_index') }}" class="text-white font-bold">Retourner sur Quacknet</a>
        <a href="{{ path('app_logout') }}" class="text-red-500 font-bold">Logout</a>
    </div>
{% endblock %}


