{% extends 'base.html.twig' %}

{% block title %}Quack{% endblock %}

{% block body %}
    <div class="p-8 flex flex-col items-center">
        <h1 class="text-3xl font-bold mb-6 text-white">Quack</h1>

        <table class="table bg-white rounded-lg shadow-lg">
            <tbody>
            <tr>
                <th class="px-4 py-2">Id</th>
                <td class="px-4 py-2">{{ quack.id }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2">Content</th>
                <td class="px-4 py-2">{{ quack.content }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2">Created_at</th>
                <td class="px-4 py-2">{{ quack.createdAt ? quack.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="mt-4">
            <a href="{{ path('app_manualcrud') }}" class="text-blue-500 hover:underline font-bold">back to list</a>
            <a href="{{ path('app_quack_edit', {'id': quack.id}) }}" class="ml-4 text-blue-500 hover:underline font-bold">edit</a>
        </div>

        <div class="mt-4">
            {{ include('quack/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
