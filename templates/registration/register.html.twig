{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex justify-center items-center h-screen">
        <div class="max-w-md bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-3xl text-center font-bold mb-8">Register</h1>

            {{ form_start(registrationForm) }}
            <div class="my-4">
                {{ form_row(registrationForm.username, { 'attr': {'class': 'border w-full p-2'} }) }}
            </div>
            <div class="my-4">
                {{ form_row(registrationForm.nom, { 'attr': {'class': 'border w-full p-2'} }) }}
            </div>
            <div class="my-4">
                {{ form_row(registrationForm.prenom, { 'attr': {'class': 'border w-full p-2'} }) }}
            </div>
            <div class="my-4">
                {{ form_row(registrationForm.email, { 'attr': {'class': 'border w-full p-2'} }) }}
            </div>
            <div class="my-4">
                {{ form_row(registrationForm.plainPassword, { 'label': 'Password', 'attr': {'class': 'border w-full p-2'} }) }}
            </div>
            <div class="my-4">
                {{ form_row(registrationForm.agreeTerms, { 'label': 'I agree to the terms', 'attr': {'class': 'form-checkbox'} }) }}
            </div>
            <div class="flex justify-center">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                    Register
                </button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
